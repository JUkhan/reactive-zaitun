{
  "name": "ts-webpack-hmr",
  "version": "1.0.0",
  "description": "Example for typescript and webpack with hot module replacement",
  "scripts": {
    "format": "prettier --tab-width 4 --single-quote --write './**/*.{js,jsx,ts,tsx}'",
    "start": "../node_modules/.bin/webpack-dev-server --config=dev.webpack.config.js",
    "build": "rimraf dist && webpack --config=dev.webpack.config.js",
    "build:prod": "rimraf dist && webpack -p --config=prod.webpack.config.js",
    "tcompile": "../node_modules/.bin/webpack --config=test.webpack.config.js",
    "compile:test:watch": "webpack -w --config=test.webpack.config.js",
    "test": "npm run tcompile && ../node_modules/.bin/testem"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/krausest/ts-webpack-hmr"
  },
  "keywords": [
    "webpack",
    "hot module replacement",
    "hmr",
    "typescript",
    ""
  ],  
  "contributors": [
    {
      "name": "Jasim Uddin Khan",
      "email": "jasim.uddin.khan@gmail.com"
    }
  ],  
  "author": "Jasim Uddin Khan",
  "license": "MIT"
  
}
